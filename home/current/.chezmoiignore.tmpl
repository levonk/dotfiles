.npm/**/*
.npm-cache/**/*
.npm-global/**/*

# pnpm
.pnpm-store/**/*
pnpm-lock.yaml # Optional, if you don't want to track the lockfile

# Yarn
yarn.lock # Optional, if you don't want to track the lockfile
.yarn/cache/**/*
.yarn/install-state.gz

