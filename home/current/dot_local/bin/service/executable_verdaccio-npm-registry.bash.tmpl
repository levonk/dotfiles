#    exit 1
#fi

# Start Verdaccio
#verdaccio &
docker run -d --name verdaccio \
    -p 4873:4873 \
    -v ${XDG_CONFIG_HOME:-$HOME/.config}/verdaccio/config:/verdaccio/config \
    -v ${XDG_DATA_HOME:-$HOME/.local/share}/verdaccio/storage:/verdaccio/storage \
    -v ${XDG_DATA_HOME:-$HOME/.local/share}/verdaccio/plugins:/verdaccio/plugins \
    verdaccio/verdaccio

# Wait for Verdaccio to start
while ! curl -s http://localhost:4873/ > /dev/null; do
    sleep 1
done

# Print Verdaccio URL
echo "Verdaccio started at http://localhost:4873"
